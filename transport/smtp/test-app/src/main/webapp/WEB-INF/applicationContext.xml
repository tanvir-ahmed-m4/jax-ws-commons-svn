<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:ws= "http://jax-ws.dev.java.net/spring/core"
       xmlns:wsm= "http://jax-ws.dev.java.net/smtp"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://jax-ws.dev.java.net/spring/core http://jax-ws.dev.java.net/spring/core.xsd
http://jax-ws.dev.java.net/spring/servlet http://jax-ws.dev.java.net/spring/servlet.xsd"
      >
      <wss:bindings id="jax-ws">
        <wss:bindings>
          <wss:binding url="/soap">
            <wss:service>
              <ws:service bean="#myService" >

              </ws:service>
            </wss:service>
          </wss:binding>
        </wss:bindings>
      </wss:bindings>

  <bean id="myService" class="greeter.GreetingService">
    <property name="prefix" value="Bonjour, " />
  </bean>

  <bean id="mySmtp" class="org.jvnet.jax_ws_commons.transport.smtp.server.SMTPConfig">
    <property name="address" value="smtp.transport@gmail.com" />
  </bean>
    
</beans>
