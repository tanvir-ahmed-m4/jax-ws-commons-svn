      <plugin>
        <groupId>org.apache.xbean</groupId>
        <artifactId>maven-xbean-plugin</artifactId>
        <version>2.7</version>
        <executions>
          <execution>
            <configuration>
              <namespace>http://jax-ws.dev.java.net/spring/servlet</namespace>
              <!--schema>target/jax-ws-spring.xsd</schema-->
            </configuration>
            <goals>
              <goal>mapping</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
